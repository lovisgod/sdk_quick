<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/biller_item_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">


   <LinearLayout
       android:id="@+id/text_area"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">

       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/biller_item_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GoTv"
           android:fontFamily="@font/roboto_bold"
           android:textColor="@color/iswTextColorBlack"
           android:textSize="20sp"
           />

       <com.google.android.material.textview.MaterialTextView
           android:id="@+id/biller_item_desc"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="GoTv Subscription"
           android:fontFamily="@font/roboto_medium"
           android:textSize="14sp"
           />

   </LinearLayout>

    <ImageView
        android:id="@+id/goto_image"
        app:layout_constraintTop_toTopOf="@+id/text_area"
        app:layout_constraintBottom_toBottomOf="@+id/text_area"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat = "@drawable/isw_ic_baseline_arrow_forward_ios_24"
        android:tint="@color/iswTextColorBlack"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>